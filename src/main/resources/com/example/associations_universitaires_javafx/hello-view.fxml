<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.associations_universitaires_javafx.HelloController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="University Clubs Login" style="-fx-font-size: 18pt; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <TextField fx:id="visiblePasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1" visible="false"/>

        <CheckBox fx:id="showPasswordCheckBox" text="Show Password"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"
                  onAction="#handleShowPassword"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin"/>
        <Button text="Register" onAction="#handleRegister"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>