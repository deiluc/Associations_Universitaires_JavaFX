<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.associations_universitaires_javafx.HomeController"
            fx:id="borderPane"
            style="-fx-padding: 20;">

    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10;"
              alignment="CENTER">
            <Label fx:id="welcomeLabel" style="-fx-text-fill: white; -fx-font-size: 18pt;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-font-size: 14pt; -fx-padding: 5 15; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <left>
        <TreeView fx:id="treeView" style="-fx-padding: 5;"/>
    </left>

    <center>
        <TextArea fx:id="newsTextArea" style="-fx-padding: 5;"/>
    </center>

    <right>
        <ListView fx:id="adminListView" style="-fx-padding: 5;"/>
    </right>

    <bottom>
        <Label text="Poliehnica Gigi Becali"
               style="-fx-font-size: 14pt; -fx-padding: 10;"/>
    </bottom>
</BorderPane>