<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.associations_universitaires_javafx.HomeController"
            style="-fx-padding: 20;">

    <top>
        <VBox spacing="10">
            <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT">
                <Label fx:id="welcomeLabel" style="-fx-text-fill: white; -fx-font-size: 18pt;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-font-size: 14pt; -fx-padding: 8 20; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>

            <!-- Dropdown Menus -->
            <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 0 15;">
                <MenuButton text="Asociati" style="-fx-font-size: 14pt;">
                    <items>
                        <MenuItem text="Lista Asociatii" />
                        <MenuItem fx:id="addAsociatieItem" text="Adauga Asociatie" />
                        <MenuItem text="Statistici" />
                    </items>
                </MenuButton>

                <MenuButton text="Info" style="-fx-font-size: 14pt;">
                    <items>
                        <MenuItem text="Despre Noi" />
                        <MenuItem text="Contact" />
                        <MenuItem text="Regulament" />
                    </items>
                </MenuButton>
            </HBox>
        </VBox>
    </top>

    <center>
        <TextArea fx:id="newsTextArea" style="-fx-font-size: 14pt; -fx-padding: 15;" editable="false" wrapText="true"/>
    </center>

    <bottom>
        <Label text="University Clubs System"
               style="-fx-font-size: 14pt; -fx-padding: 15;"/>
    </bottom>
</BorderPane>