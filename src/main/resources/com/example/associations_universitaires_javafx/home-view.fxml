<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.associations_universitaires_javafx.HomeController"
            style="-fx-padding: 20;">

    <top>
        <VBox spacing="10">
            <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT">
                <Label fx:id="welcomeLabel" style="-fx-text-fill: white; -fx-font-size: 18pt;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <MenuButton text="Profile" style="-fx-font-size: 14pt; -fx-padding: 8 20; -fx-background-color: #3498db; -fx-text-fill: white;">
                    <items>
                        <MenuItem text="View Profile" onAction="#handleViewProfile" />
                        <MenuItem text="Logout" onAction="#handleLogout" />
                    </items>
                </MenuButton>
                </HBox>

            <!-- Admin Announcement Button -->
            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 0 15 10 15;">
                <Button fx:id="addAnnouncementBtn" text="Adauga anunt"
                        onAction="#handleAddAnnouncement"
                        style="-fx-font-size: 12pt; -fx-background-color: #3498db; -fx-text-fill: white;"/>
            </HBox>

            <!-- Navigation Menus -->
            <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 0 15;">
                <MenuButton text="Asociati" style="-fx-font-size: 14pt;">
                    <items>
                        <MenuItem text="Lista Asociatii" onAction="#handleListAssociations"/>
                        <MenuItem fx:id="addAsociatieItem" text="Adauga Asociatie" onAction="#handleAddAsociatie"/>
                    </items>
                </MenuButton>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox fx:id="announcementsContainer" spacing="20" style="-fx-padding: 20;"/>
        </ScrollPane>
    </center>

    <bottom>
        <Label text="University Clubs System"
               style="-fx-font-size: 14pt; -fx-padding: 15;"/>
    </bottom>
</BorderPane>