<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.associations_universitaires_javafx.RegisterController"
      spacing="15"
      alignment="CENTER"
      style="-fx-padding: 25; -fx-background-color: #f5f5f5;">

    <Label text="Student Registration" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="10" vgap="15">
        <!-- First Name -->
        <Label text="First Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" promptText="Enter first name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Last Name -->
        <Label text="Last Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" promptText="Enter last name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Email -->
        <Label text="Email:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="example@university.edu" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Password -->
        <Label text="Password:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <PasswordField fx:id="passwordField" promptText="Create password" style="-fx-min-width: 250;"/>
            <Button fx:id="showPasswordBtn" text="ðŸ‘" tooltip="Show password" style="-fx-background-radius: 5; -fx-min-width: 30;" onAction="#togglePasswordVisibility"/>
        </HBox>

        <!-- Password Requirements -->
        <HBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <VBox spacing="3">
                <Text text="â€¢ 8+ characters" fill="#e74c3c" fx:id="lengthReq"/>
                <Text text="â€¢ 1 uppercase" fill="#e74c3c" fx:id="upperReq"/>
                <Text text="â€¢ 1 lowercase" fill="#e74c3c" fx:id="lowerReq"/>
                <Text text="â€¢ 1 special character" fill="#e74c3c" fx:id="specialReq"/>
            </VBox>
        </HBox>

        <!-- Confirm Password -->
        <Label text="Confirm Password:" style="-fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Password Match Indicator -->
        <Label fx:id="passwordMatchLabel" text="" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-text-fill: #e74c3c;"/>
    </GridPane>

    <!-- Register Button -->
    <Button text="Register" fx:id="registerBtn" style="-fx-font-size: 14px; -fx-padding: 8 20; -fx-background-color: #3498db; -fx-text-fill: white;" onAction="#handleRegister"/>

    <!-- Status Message -->
    <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>

    <!-- Back to Login -->
    <HBox spacing="5" alignment="CENTER">
        <Label text="Already have an account?"/>
        <Button text="Sign In" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-underline: true;" onAction="#handleBackToLogin"/>
    </HBox>
</VBox>